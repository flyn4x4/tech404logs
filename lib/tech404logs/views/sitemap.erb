<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <sitemap>
    <loc><%= url('/root_sitemap.xml') %></loc>
    <lastmod><%= Time.current.iso8601 %></lastmod>
  </sitemap>

  <%# Force eager loading not to happen with to_a or it selects all messages %>
  <% channels.to_a.each do |channel| %>
    <sitemap>
      <loc><%= url(channel_sitemap_path(channel)) %></loc>
      <lastmod><%= channel.last_active_at.iso8601 %></lastmod>
    </sitemap>
  <% end %>
</sitemapindex>
