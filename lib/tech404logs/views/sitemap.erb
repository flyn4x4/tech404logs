<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
  http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

  <url>
    <loc><%= url('/') %></loc>
    <lastmod><%= Time.current.iso8601 %></lastmod>
  </url>

  <%# Force eager loading not to happen with to_a or it selects all messages %>
  <% channels.to_a.each do |channel| %>
    <sitemap>
      <loc><%= url(channel_sitemap_path(channel)) %></loc>
      <lastmod><%= channel.last_active_at.iso8601 %></lastmod>
    </sitemap>
  <% end %>
</urlset>
